        style.
            main {
                display: flex;
                flex-direction: column;
                justify-content:center;
                align-items: center;
                max-width: 640px;
            }
            .formContainer form {
                display: flex;
                flex-direction: column;
                justify-content:center;
                align-items: center;
                margin-bottom: 10px;
            }
            .loading {
                display: none;
                position: absolute;
                border-radius: 50%;
            }
            .showing {
                position: relative;
                display: none;
                flex-direction: column;
                justify-content: center;
                align-items: center;
                padding: 10px;
                border: 2px solid black;
                border-radius: 7px;
                margin-bottom: 25px;
            }
            .showing #peerVideo {
                position: relative;
                width: 100%;
                max-width:640px;
                padding: 10px;
                border-top: 2px solid black; 
                border-bottom: 2px solid black;
                margin-bottom: 10px;
            }
            .btnContainer {
                display: flex;
                justify-content: space-around;
                width: 100%;
                z-index: 1;
                margin-bottom: 10px;
            }
            .btn {
                width: 20px;
                padding: 10px;
                background: white;
                border : 2px solid black;
                border-radius: 50%;
                cursor: pointer;
            }
            .btn:hover{
                border: 2px solid #0E8BEE;
            }
            #myContainer {
                position: absolute;
                bottom: 23%;
                right: 45px;
            }
            .msgForm{
                bottom: 0;
                width: auto;
                height: 30px;
                display: flex;
                justify-content: center;
                align-items: center;
                text-align: center;
            }
            .msgForm input {
                width: 70%;
                margin: 0;
            }
            .msgForm button {
                padding: 5px;
                font-size: 12px;
                margin-left: 5px;
            }
            #chatRoom {
                width: 100%;
                height: 200px;
                font-size: 11px;
                overflow-y: auto;
                background: #f5f6fa;
                border-radius: 7px;
                margin-bottom: 10px;
            }
            #chatRoom ul {
                display: flex;
                flex-direction: column;
                padding: 0;
            }
            #chatRoom li {
                display: flex;
                list-style-type: none;
            }
            #chatRoom span {
                border: none;
                border-radius: 7px;
                padding: 8px;
                margin: 3px;
                color: white;
                font-weight: bold;
            }
            .myChat {
                justify-content: end;
                margin-right: 10px;
            }
            .peerChat{
                justify-content: start;
            }
            .myChat span {
                background: #0E8BEE;
            }
            .peerChat span {
                background: #353b48;
            }
